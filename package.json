{
  "name": "Fontiny",
  "version": "1.0.1",
  "description": "font tiny by simmzl",
  "main": "./src/main/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dev:web": "cd ./src/renderer/fontiny-app && npm run dev",
    "dev:electron": "npx run-p start dev:web",
    "build:web": "cd ./src/renderer/fontiny-app && npm run build",
    "build": "npm run build:web && npm run package"
  },
  "author": "simmzl",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^16.0.6",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "archiver": "^5.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "font-spider": "^1.3.5",
    "fs-extra": "^10.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/main/assets/icons/favicon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "./src/main/assets/icons/favicon.icns",
            "background": "./src/main/assets/icons/bg.png",
            "additionalDMGOptions": {
              "window": {
                "size": {
                  "width": 700,
                  "height": 700
                },
                "position": {
                  "x": 200,
                  "y": 100
                }
              }
            }
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Fontiny"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
